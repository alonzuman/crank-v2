<%= render  "shared/top_bar", left: (link_to 'Back', root_path) %>
<div class='container center'>
  <%= image_tag ('https://picsum.photos/500/500'), class:'video-player' %>
  <%= @post.user.username %>
  <%= @post.description %>
  <div class='comments-section'>
    <% @post.comments.each do |comment| %>
    <%= render  "shared/comment_card", comment:comment %>
    <% end %>
  </div>
</div>